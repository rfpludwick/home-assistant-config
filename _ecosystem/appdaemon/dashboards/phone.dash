title: Phone
widget_dimensions: [100, 125]
widget_size: [1, 1]
widget_margins: [3, 3]
columns: 4

bed_down_script:
    widget_type: script
    entity: script.bed_down
    title: Bed Down
    icon_on: mdi-sleep
    icon_off: mdi-sleep
    icon_style_active: "font-size: 400%; margin-top: -5%; color: #5555ff;"
    icon_style_inactive: "font-size: 400%; margin-top: -5%; color: #5555ff;"

cait_presence:
    widget_type: device_tracker
    device: mermaidphone
    title: Cait
    icon_on: mdi-gender-female
    icon_off: mdi-gender-female
    icon_style_active: "font-size: 400%; margin-top: -5%;"
    icon_style_inactive: "font-size: 400%; margin-top: -5%;"
    state_text_style: "display: none;"

clock:
    widget_type: clock
    time_style: "color: #00dd00; font-size: 250%;"

combined_alarm:
    widget_type: alarm
    entity: alarm_control_panel.combined_alarm
    title: Alarm
    title_style: "color: #ffffff;"
    state_style: "font-size: 125%;"

family_room_ceiling_light:
    widget_type: light
    entity: light.family_room_ceiling
    title: Family Room
    icon_on: mdi-lightbulb
    icon_off: mdi-lightbulb
    icon_up: mdi-arrow-up-bold-hexagon-outline
    icon_down: mdi-arrow-down-bold-hexagon-outline
    icon_style_active: "font-size: 375%; margin-top: -10%;"
    icon_style_inactive: "font-size: 375%; margin-top: -10%;"
    level_up_style: "font-size: 150%; margin-left: -5px;"
    level_down_style: "font-size: 150%; margin-left: -5px;"
    on_attributes:
        brightness: 200
        color_temp: 435

front_door_lock:
    widget_type: lock
    entity: lock.front_door
    title: Front Door

garage_door:
